<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Conduit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/conduit_white</item>
        <item name="colorPrimaryVariant">@color/conduit_color_light_text</item>
        <item name="colorOnPrimary">@color/conduit_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/conduit_yellow</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/conduit_color_light_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Conduit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Conduit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Conduit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>